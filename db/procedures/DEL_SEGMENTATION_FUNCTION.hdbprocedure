PROCEDURE "MKTG_PLANNING_TOOL"."mktgplanningtool.db.procedures::DEL_SEGMENTATION_FUNCTION" (
	IN IN_SEGMENTATION_FUNCTION_ID BIGINT,
	IN IN_MODIFIED_USER_ID BIGINT,
	OUT out_result bigint
	)
	LANGUAGE SQLSCRIPT
	SQL SECURITY INVOKER
	DEFAULT SCHEMA "MKTG_PLANNING_TOOL" AS
BEGIN

	UPDATE SEGMENTATION_FUNCTION
	SET DELETED = 1
	    , ENABLED = 0
		, MODIFIED_USER_ID = IN_MODIFIED_USER_ID
		, modified_date_tz = CURRENT_TIMESTAMP
		, deleted_token = (SELECT CAST(SYSUUID AS VARCHAR) AS "SYS_UNIQUE_NUMBER" FROM DUMMY)
		WHERE SEGMENTATION_FUNCTION_ID = IN_SEGMENTATION_FUNCTION_ID
		  AND DELETED = 0
		  AND ENABLED = 1;

	 SELECT ::ROWCOUNT into out_result FROM DUMMY;
END;
